rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to get the current user's role
    function getRole() {
      // Check if the user doc exists before trying to access it
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) 
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role 
        : null;
    }

    // Helper checks
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return getRole() == 'admin' || getRole() == 'super_admin';
    }

    function isSuperAdmin() {
      return getRole() == 'super_admin';
    }

    // Users Collection
    match /users/{userId} {
      // 1. CREATE: Allow new users to create their own document
      // Strict validation: Must set role to 'user' and default fields
      allow create: if isSignedIn() && isOwner(userId)
        && request.resource.data.role == 'user'
        && request.resource.data.adminRequest == false;

      // 2. READ: Users can read their own document, Admins can read all
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      
      // 3. UPDATE: Users can update specific fields (like adminRequest)
      // They cannot change their own role
      allow update: if isSignedIn() && isOwner(userId) 
        && request.resource.data.role == resource.data.role; // Role must remain unchanged
      
      // 4. LIST: Admins/Super Admins can list users
      allow list: if isSignedIn() && isAdmin();

      // 5. SUPER ADMIN: Full write access (overrides others if true)
      allow write: if isSignedIn() && isSuperAdmin();
    }

    // Newsletters/Posts Collection (Example)
    match /newsletters/{newsletterId} {
      allow read: if true; 
      allow write: if isSignedIn() && isAdmin();
    }
    
    // Default block
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
